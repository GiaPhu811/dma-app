{
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "nx": "16.3.2"
  },
  "resolutions": {
    "@yarnpkg/parsers": "3.0.0-rc.48.1",
    "tough-cookie": "^4",
    "semver": "^7",
    "jsdom": "^16"
  },
  "scripts": {
    "prepare": "nx run-many -t build -p aesirx-uikit aesirx-lib && nx run-many -t build:lib --exclude aesirx-uikit aesirx-lib aesirx-dma-app",
    "dev": "nx run-many -t dev",
    "build": "nx run aesirx-dma-app:build",
    "build:lib": "nx run aesirx-dma-app:build:lib",
    "lint:check": "nx run aesirx-dma-app:lint:check",
    "format:check": "nx run aesirx-dma-app:format:check",
    "prepublishOnly": "nx run aesirx-dma-app:prepublishOnly"
  }
}
